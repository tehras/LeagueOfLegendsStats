<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tab_strip="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/stats_tabbed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tab_strip:tabBackground="@color/colorPrimaryLight"
        tab_strip:tabIndicatorColor="@color/colorAccent"
        tab_strip:tabIndicatorHeight="@dimen/indicator_height"
        tab_strip:tabSelectedTextColor="@color/elevation_background"
        tab_strip:tabTextColor="@color/elevation_background"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/stats_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>