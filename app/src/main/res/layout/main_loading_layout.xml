<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/loading_layout_full_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:elevation="16dp"
    android:orientation="vertical">

    <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
        android:id="@+id/main_rounded_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/splash_screen"/>

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="Setting Up"
        android:textAlignment="center"
        android:textColor="@color/elevation_background"/>

</RelativeLayout>