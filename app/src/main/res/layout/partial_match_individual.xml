<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/match_header"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/activity_vertical_margin_small"
              android:background="@android:color/white"
              android:elevation="@dimen/medium_elevation"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin_small"
              android:paddingEnd="@dimen/activity_horizontal_margin_xsmall"
              android:paddingStart="@dimen/activity_horizontal_margin_xsmall"
              android:paddingTop="@dimen/activity_vertical_margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:text="@string/match_team_stats_middle"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"/>

        <include
            layout="@layout/partial_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin_small"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"/>

    </LinearLayout>

    <include
        android:id="@+id/match_individual_champ_1"
        layout="@layout/partial_match_individual_champ"/>

    <include
        layout="@layout/partial_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin_xsmall"
        android:layout_marginTop="@dimen/activity_vertical_margin_xsmall"/>

    <include
        android:id="@+id/match_individual_champ_2"
        layout="@layout/partial_match_individual_champ"/>

    <include
        layout="@layout/partial_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin_xsmall"
        android:layout_marginTop="@dimen/activity_vertical_margin_xsmall"/>

    <include
        android:id="@+id/match_individual_champ_3"
        layout="@layout/partial_match_individual_champ"/>

    <include
        layout="@layout/partial_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin_xsmall"
        android:layout_marginTop="@dimen/activity_vertical_margin_xsmall"/>

    <include
        android:id="@+id/match_individual_champ_4"
        layout="@layout/partial_match_individual_champ"/>

    <include
        layout="@layout/partial_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin_xsmall"
        android:layout_marginTop="@dimen/activity_vertical_margin_xsmall"/>

    <include
        android:id="@+id/match_individual_champ_5"
        layout="@layout/partial_match_individual_champ"/>

</LinearLayout>