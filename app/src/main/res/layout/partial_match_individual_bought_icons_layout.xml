<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:rounded_image="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
    >

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon0"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_gravity="top"
                android:layout_margin="1px"
                android:contentDescription="icon 0"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon1"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_margin="1px"
                android:contentDescription="icon 1"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon4"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_margin="1px"
                android:contentDescription="icon 4"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon2"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_margin="1px"
                android:contentDescription="icon 2"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon5"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_margin="1px"
                android:contentDescription="icon 5"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon3"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_margin="1px"
                android:contentDescription="icon 3"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

            <com.github.koshkin.leagueoflegendsstats.views.RoundedImageView
                android:id="@+id/icon6"
                android:layout_width="@dimen/item_icon_height"
                android:layout_height="@dimen/item_icon_height"
                android:layout_margin="1px"
                android:contentDescription="icon 6"
                android:src="@color/cardview_dark_background"
                rounded_image:cornerSize="@dimen/small_corner"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_layout"
        android:layout_alignStart="@+id/item_layout"
        android:layout_below="@+id/item_layout"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/champion_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_xsmall"
            android:text="46.3k Gold"
            android:textColor="@color/gold_color"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>