<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.github.koshkin.leagueoflegendsstats.views.CircleImageView
            android:id="@+id/champion_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:contentDescription="champion icon"
            android:src="@drawable/ic_wallpaper_black_48dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin_xsmall"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="@dimen/small_icon_height"
                android:layout_height="@dimen/small_icon_height"
                android:clickable="false"
                android:contentDescription="icon F"
                android:src="@drawable/ic_wallpaper_black_48dp"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="@dimen/small_icon_height"
                android:layout_height="@dimen/small_icon_height"
                android:layout_marginTop="@dimen/activity_vertical_margin_xsmall"
                android:clickable="false"
                android:contentDescription="icon D"
                android:src="@drawable/ic_wallpaper_black_48dp"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>