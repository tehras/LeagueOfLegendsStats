<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/champion_kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/champion_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/champion_assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin_xsmall"
            android:text="("
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/champion_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.45"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_xsmall"
            android:text=")"
            android:textSize="@dimen/text_size_medium_small"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/champion_cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="106 CS"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/champion_wards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="106 CS"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/champion_dmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="10.3k Dmg"
        android:textSize="@dimen/text_size_small"/>

    <RelativeLayout
        android:id="@+id/game_achievement_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_rectangle_blue_small">

        <TextView
            android:id="@+id/game_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triple Kill"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_xsmall"/>

    </RelativeLayout>

</LinearLayout>

